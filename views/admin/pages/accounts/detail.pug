extends ../../layouts/default.pug

block main 
    h1(class="mb-4") Chi tiết tài khoản

    if(account.avatar)
        img(src=account.avatar width="150px" class="mb-3")
    else
        img(src="/admin/images/avatar.png" width="150px" class="mb-3")

    if(account.fullName)
        p Họ tên: <b>#{account.fullName}</b>
    
    if(account.email)
        p Email: <b>#{account.email}</b>

    if(account.phone)
        p Số điện thoại: <b>#{account.phone}</b>
    
    p 
        span Trạng thái: 
        span
            <b>#{account.status === "active" ? "Hoạt động" : "Dừng hoạt động"}</b>

    if(account.role)
        p Phân quyền: <b>#{account.role.title}</b>
    
    if(role.permissions.includes("accounts_edit"))
        a(
            href=`${prefixAdmin}/accounts/edit/${account.id}`
            class="btn btn-primary"
        ) Chỉnh sửa thông tin