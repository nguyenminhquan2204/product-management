extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
    .container.my-3 
        .row    
            .col-12 
                +box-head("Chat")
        
        .row
            .col-12 
                .chat 
                    //- .inner-head
                    //- .inner-avatar ..
                    //- .inner-name ..
                    .inner-body 
                        each chat in chats 
                            div(class=(chat.infoUser.id == user.id ? "inner-outgoing" : "inner-incoming"))
                                if(chat.infoUser.id != user.id)
                                    .inner-name #{chat.infoUser.fullName}
                                .inner.content
                                    | #{chat.content}
