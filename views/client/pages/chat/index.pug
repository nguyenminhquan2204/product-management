                        //-     .inner-content
                        //-         |...
                        //- .inner-incoming 
                        //-     .inner-name ..
                        //-     .inner-content 
                        //-         |...
                    .inner-foot 
                        form(
                            class="inner-form"
                            action=""

                        )
                            input(
                                type="text"
                                placeholder="Nhập nội dung..."
                                name="content"
                            )
                            button
