extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main 
    .container
        h1(class="mb-4") Các thành viên trong nhóm

        +alert-error(5000)
        +alert-success(5000)

        .row
            .col-12
                +box-head(room.title)
        
        .row
            each user in users
                .col-6(user-id=user.id)
                    div(class="box-user")
                        div(class="inner-avatar")
                            img(
                                src=(user.avatar ? user.avatar : "/images/avatar.png")
                                alt=user.fullName
                            )
                        div(class="inner-info")
                            div(class="inner-name") #{user.fullName} 
                            div(class="inner-buttons")
                                a(
                                    href=`/user/info/${user.id}`
                                    class="btn btn-sm btn-primary mr-1"
                                ) Chi tiết
            
        a(href=`/chat/addMember/${room.id}` class="btn btn-success my-3") Thêm thành viên

    block script
        script(type="module" src="/js/chat.js")